{
    "name": "soyhuce/phpunit-to-cobertura",
    "description": "Generates a cobertura code coverage report from phpunit",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Bastien Philippe",
            "email": "bastien.philippe@soyhuce.fr"
        }
    ],
    "require": {
        "php": "^7.3  || ^8.0",
        "ext-dom": "*",
        "phpunit/phpunit": "^9.3"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.17"
    },
    "autoload": {
        "psr-4": {
            "Soyhuce\\PhpunitToCobertura\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soyhuce\\PhpunitToCobertura\\Tests\\": "tests/"
        },
        "files": [
            "tests/Fixtures/Src/helpers.php"
        ]
    },
    "bin": [
        "phpunit-to-cobertura"
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "sort-packages": true,
        "preferred-install": "dist"
    }
}
